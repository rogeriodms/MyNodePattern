{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-undef": "off",
        "import/prefer-default-export": "off",
        "class-methods-use-this": "off",
        "no-unused-vars": "off",
        "no-restricted-syntax": "off",
        "no-useless-constructor": "off",
        "no-empty-function": "off",
        "max-classes-per-file": "off",
        "import/extensions": [
        "error",
        "ignorePackages",
        {
            "ts": "never"
        }
        ]
    },
    "settings": {
        "import/resolver": {
          "typescript": {}
        }
      }

}
